<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="35dp"
    android:padding="8dp">


    <TextView
        android:id="@+id/update_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Profil Güncelleme"
        android:textColor="@color/secondary_text"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter_email_update_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eposta girin" />

    <EditText
        android:id="@+id/update_field_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/enter_password_update_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parola girin" />

    <EditText
        android:id="@+id/update_field_password"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/enter_name_update_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İsminizi Girin" />

    <EditText
        android:id="@+id/update_field_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/gender_update_form_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinsiyetinizi Girin" />

    <EditText
        android:id="@+id/update_field_gender"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/photo_update_form_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fotoğraf urli girin" />

    <EditText
        android:id="@+id/update_field_photo"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yaş grubu girin" />
    <Spinner
        android:id="@+id/age_update_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_dark"
            android:text="Güncelle"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/delete_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#EB4B1F"
            android:text="Profili Sil"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>



    </ScrollView>